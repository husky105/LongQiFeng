<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/controlLayout">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="4">
        <TextView
            android:width="0dp"
            android:text="@string/room_name"
            android:layout_columnWeight="1"
            android:gravity="center"/>
        <TextView
            android:width="0dp"
            android:id="@+id/Room_Name_Of_ControlPage"
            android:text="exampleText"
            android:layout_columnWeight="1"
            android:gravity="center"
            />
        <TextView
            android:width="0dp"
            android:text="@string/deviceStatus"
            android:layout_columnWeight="1"
            android:gravity="center"
            />
        <TextView
            android:width="0dp"
            android:id="@+id/Device_Status_Of_ControlPage"
            android:text="exampleText"
            android:layout_columnWeight="1"
            android:gravity="center"/>
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="19"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_status_setting"
            android:padding="2dp"
            android:layout_gravity="fill"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/window_angle_control" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="4dp"
            android:minHeight="4dp" />
    </LinearLayout>
</LinearLayout>