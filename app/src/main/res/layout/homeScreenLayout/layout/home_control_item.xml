<?xml version="1.0" encoding="utf-8"?><!--主界面item布局-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/Home_Item_Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/living_room"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/Room_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="	#F8F8FF"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Device_Status_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="设备状态"
            android:textColor="#f8f8ff"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/Room_Name" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:background="#f8f8ff"
            app:layout_constraintBottom_toBottomOf="@id/Device_Status_Text"
            app:layout_constraintStart_toEndOf="@+id/Device_Status_Text"
            app:layout_constraintTop_toTopOf="@id/Device_Status_Text"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/Device_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text=""
            android:textColor="	#F8F8FF"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/Device_Status_Text"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/Device_Status_Text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>